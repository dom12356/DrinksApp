@model IEnumerable<DrinksApp.Models.Drink>
@{
    ViewData["Title"] = "Home Page";
}

<h1>Welcome To My Online Drink Shop</h1>

<div class="container">
    <div class="row">
        <p>
            @foreach (var item in Model)
            {
                <div class="col-sm-4 col-lg-4 col-md-4">
                    <img alt="@item.Name" src="@item.Image" id="@item.Id" class="item" style="width:100%;" />
                    <div class="thumbnail">
                        <a class="item" asp-controller="Home" asp-action="ViewDetails" asp-route-id="@item.Id">
                            <h3>
                                @Html.DisplayFor(modelItem => item.Name)
                            </h3>
                        </a>
                    </div>
                    <div class="price">
                        <h3 class="pull-right">
                            @Html.DisplayFor(modelItem => item.Price)
                        </h3>
                    </div>
                    <div class="caption">
                        <h6>
                            @Html.DisplayFor(modelItem => item.Description)
                        </h6>
                    </div>

                </div>
            }
        </p>
    </div>
</div>
