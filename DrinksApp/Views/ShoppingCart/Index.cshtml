@model DrinksApp.ViewModels.ShoppingCartViewModel

<link rel="stylesheet" href="~/css/ShoppingCart.css" />
<div class="row checkoutForm">
    <h1>Your shopping cart</h1>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Selected amount</th>
                <th>Drink</th>
                <th class="text-right">Price</th>
                <th class="text-right">Subtotal</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var line in Model.ShoppingCart.ShoppingCartItems)
            {
                <tr>
                    <td class="text-center">@line.Amount</td>
                    <td class="text-left">@line.drink.Name</td>
                    <td class="text-right">@line.drink.Price.ToString("c")</td>
                    <td class="text-right">
                        @((line.Amount * line.drink.Price).ToString("c"))
                    </td>
                    <td class="text-center"><a class="glyphicon glyphicon-remove text-danger remove" asp-controller="ShoppingCart" asp-action="RemoveFromShoppingCart" asp-route-drinkId="@line.drink.Id"><i class="fa fa-trash"></i>Delete</a></td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-right">Total:</td>
                <td class="text-right">
                    @Model.ShoppingCartTotal.ToString("c")
                </td>
            </tr>
        </tfoot>
    </table>

    <div class="text-right">
        <div class="btn-group ">
            <a class="btn btn-success" asp-controller="Order" asp-action="Checkout">Check out</a>
            <a class="continue" asp-controller="Home" asp-action="Index">Continue Shopping</a>
        </div>
    </div>
</div>